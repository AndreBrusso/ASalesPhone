        text-align: center;
    }

    .add-btn {
        background-color: #25d366;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 6px 14px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        transition: background 0.2s;
    }

        .add-btn:hover {
