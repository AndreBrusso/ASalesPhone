@{
    ViewData["Title"] = "Página Inicial";
}

@{
    Layout = null;
}
<script>

    document.addEventListener('DOMContentLoaded', function () {
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        if (mobileMenuBtn) {
            mobileMenuBtn.addEventListener('click', function () {
                alert('Menu mobile será exibido aqui');
            });
        }

        // Adicionar funcionalidade aos botões de dispositivo (desktop/mobile)
        const deviceBtns = document.querySelectorAll('.device-btn');

        deviceBtns.forEach(btn => {
            btn.addEventListener('click', function () {
                // Remove a classe 'active' de todos os botões
                deviceBtns.forEach(b => b.classList.remove('active'));
                // Adiciona a classe 'active' ao botão clicado
                this.classList.add('active');
            });
        });

        // Adicionar funcionalidade aos cards de produto
        const productCards = document.querySelectorAll('.product-card');

        productCards.forEach(card => {
            if (!card.classList.contains('empty')) {
                card.addEventListener('click', function () {
                    // Redirecionar para a página do produto
                    // window.location.href = 'produto.html'; direcionar depois
                });

                // Adiciona cursor pointer para indicar que é clicável
                card.style.cursor = 'pointer';
            }
        });
    });
</script>


<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        color: #333;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    ul {
        list-style: none;
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
    }

    /* Barra Superior */
    .top-bar {
        background-color: #fff;
        border-bottom: 1px solid #e5e5e5;
        padding: 10px 0;
    }

        .top-bar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    .wix-logo {
        font-weight: bold;
        font-size: 24px;
    }

    .edit-section {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .device-toggle {
        display: flex;
        border: 1px solid #e5e5e5;
        border-radius: 4px;
    }

    .device-btn {
        background: none;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

        .device-btn.active {
            background-color: #f5f5f5;
        }

    .edit-text {
        display: none;
    }

    .saiba-mais {
        color: #666;
        margin-left: 5px;
    }

        .saiba-mais:hover {
            text-decoration: underline;
        }

    .edit-btn {
        background-color: #1976d2;
        color: white;
        border: none;
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: bold;
        cursor: pointer;
    }

        .edit-btn:hover {
            background-color: #1565c0;
        }

    /* Barra de Contato */
    .contact-bar {
        background-color: #f5f5f5;
        padding: 8px 0;
    }

        .contact-bar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    .contact-options {
        display: flex;
        gap: 20px;
    }

    .contact-option {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
    }

    .icon-circle {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }

    .whatsapp {
        background-color: #25D366;
        color: white;
    }

    .question {
        background-color: #ddd;
        color: #666;
    }

    .search-container {
        position: relative;
    }

        .search-container input {
            padding: 6px 30px 6px 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 14px;
        }

        .search-container i {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #999;
        }

    /* Cabeçalho Principal */
    .main-header {
        padding: 20px 0;
    }

        .main-header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

    .brand h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 0;
    }

    .brand p {
        font-size: 14px;
    }

    .main-nav ul {
        display: flex;
        gap: 24px;
    }

    .main-nav a {
        color: #555;
        transition: color 0.2s;
    }

        .main-nav a:hover {
            color: #000;
        }

    .header-icons {
        display: flex;
        gap: 15px;
    }

    .icon-link {
        color: #555;
        transition: color 0.2s;
    }

        .icon-link:hover {
            color: #000;
        }

    .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    /* Grid de Produtos */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin: 30px 0;
    }

    .product-card {
        position: relative;
    }

    .product-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #000;
        color: white;
        font-size: 12px;
        padding: 4px 8px;
        z-index: 1;
    }

        .product-badge.promotion {
            background-color: #000;
        }

    .product-image {
        aspect-ratio: 1/1;
        overflow: hidden;
        background-color: #f5f5f5;
        margin-bottom: 15px;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

    .product-info {
        text-align: center;
    }

        .product-info h3 {
            font-size: 14px;
            font-weight: normal;
            color: #777;
            margin-bottom: 5px;
        }

    .price {
        font-size: 16px;
        font-weight: 500;
    }

    /* Seção de Promoção */
    .promotion-section {
        margin: 60px 0 30px;
    }

    .promotion-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }

    .product-card.empty {
        background-color: #f5f5f5;
        aspect-ratio: 1/1;
    }


    .rodape {
        background-color: #000; /* Fundo preto do rodapé */
        color: #ccc; /* Texto cinza claro para contraste */
        text-align: center;
        padding: 150px;
        border-top: 1px solid #333;
    }

    .imagem-esticada {
        transition: transform 0.3s ease; /* Transição suave */
    }

    .imagem-esticada:hover {
            transform: scale(1.1); /* Aumenta a imagem em 10% */
        }

</style>

<body>
    <!-- Barra Superior -->
    <div class="top-bar">
        <div class="container">
            <div class="logo">
                <span class="wix-logo">Sales Phoene</span>
            </div>
        </div>
    </div>

    <!-- Barra de Contato -->
    <div class="contact-bar">
        <div class="container">
            <div class="contact-options">
                <div class="contact-option">
                    <div class="icon-circle whatsapp">
                        <i class="fab fa-whatsapp"></i>
                    </div>
                    <span>Fale pelo whatsapp</span>
                </div>
                <div class="contact-option">
                    <div class="icon-circle question">
                        <i class="fas fa-question"></i>
                    </div>
                    <span>Tire suas dúvidas</span>
                </div>
            </div>
            <div class="search-container">
                <input type="text" placeholder="Pesquisar...">
                <i class="fas fa-search"></i>
            </div>
        </div>
    </div>

    <!-- Cabeçalho Principal -->
    <header class="main-header">
        <div class="container">
            <div class="brand">
                <h1>Iphones</h1>
                <p>Celular</p>
            </div>
            <nav class="main-nav">
                <ul>
                    <li><a href="#">Loja</a></li>
                    <li><a href="#">Sobre</a></li>
                    <li><a href="#">FAQ</a></li>
                    <li><a href="#">Contato</a></li>
                </ul>
            </nav>
            <button class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </header>

    <main>
        <div class="container">
            <div class="products-grid">
                <div class="product-card">
                    <div class="product-badge">Mais vendido</div>
                    <div class="product-image">
                        <a asp-controller="VendaPhones" asp-action="iphone16max">
                            <img src="/iphone16.webp"  class="imagem-esticada">
                        </a>
                    </div>
                    <div class="product-info">
                        <h3>Iphone 16 pro max</h3>
                        <p class="price">R$ 6000,00</p>
                    </div>
                </div>
                <div class="product-card">
                    <div class="product-image">
                        <a asp-controller="VendaPhones" asp-action="iphone15">
                            <img src="/iphone-15.webp" class="imagem-esticada">
                        </a>
                    </div>
                    <div class="product-info">
                        <h3>Iphhone 15</h3>
                        <p class="price">R$ 4000,00</p>
                    </div>
                </div>
                <div class="product-card">
                    <a asp-controller="VendaPhones" asp-action="iphone14">
                        <img src="/iphone 14.jpg" class="imagem-esticada">
                    </a>
                    <div class="product-info">
                        <h3>Iphhone 14</h3>
                        <p class="price">R$ 3000,00</p>
                    </div>
                </div>
                <div class="product-card">
                    <div class="product-badge">Mais vendido</div>
                    <div class="product-image">
                        <a asp-controller="VendaPhones" asp-action="iphone16">
                            <img src="/iphhone16.jpg"  class="imagem-esticada">
                        </a>
                    </div>
                    <div class="product-info">
                        <h3>Iphone 16</h3>
                        <p class="price">R$ 5500,00</p>
                    </div>
                </div>
            </div>
    </main>

    <footer class="rodape">
        <p>&copy; 2025 Meu Site. Todos os direitos reservados.</p>
    </footer>

    <script src="script.js"></script>
</body>